<fx:root fx:id="cardLayout" styleClass="tasksItem" type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<StackPane styleClass="cardBg">
			<children>
            <VBox fx:id="card" prefHeight="70.0" prefWidth="500.0" styleClass="card">
               <children>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <StackPane prefHeight="39.0" prefWidth="416.0">
                           <children>
                  							<Text fx:id="filename" strokeWidth="0.0" styleClass="filename" text="taskname let me seeeeeeeee" wrappingWidth="427.125" StackPane.alignment="CENTER_LEFT">
